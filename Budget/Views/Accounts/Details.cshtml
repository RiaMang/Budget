@section Scripts{
<script type="text/javascript">
    $(function()
    {
        console.log("Document is ready"+$('.buton').attr('data-id'));
        $('.buton').click(function()
        {
            
            $('#formdata').attr('value', $(this).attr('data-id'));
            $('.Desc').text($(this).attr('data-description'));
            $('.Amt').text($(this).data('amount'));
        });

        $('.ebuton').click(function () {
            console.log('inside the click button' + $(this).data('id'));
            
            $.ajax({
                type: "GET",
                url: "/Transactions/Edit/"+$(this).data('id'),
                data: function (d) {
                    d.id = $(this).data('id')
                },
                
            }).then(function(response) {
                $('#edit').replaceWith(response);
                //console.log(response);
            })
        });
    });
</script>
