@model IEnumerable<Budget.Models.Account>


    
<div class="page-body">
    
    <div class="row">
        <div class="col-xs-12 col-md-6">
            <div class="well with-header  with-footer">
                <div class="header bg-blue">
                    Accounts 
                    <span>@Html.ActionLink(" Create New", "Create")</span>
                </div>
                <table class="table table-hover">
                    <thead class="bordered-darkorange">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Balance)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Balance)
                                </td>
                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                                    <a href="" data-toggle="modal" data-target="#@item.Id">Delete</a>
                                    
                                </td>
                            </tr>
    <div class="modal modal-primary" id="@item.Id" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                    <h4 class="modal-title">Delete Account</h4>
                </div>
                <div class="modal-body">
                    <p>If you delete this account, you will no longer have access to the transactions of this account. Are you sure you want to delete the account ? </p>
                    <p>@Html.DisplayFor(modelItem => item.Name)
                    <br />
                        @Html.DisplayFor(modelItem => item.Balance)</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-warning" data-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-primary">@Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @style = "color:#fff" })</button>

                </div>
            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->
                        }
                    </tbody>
                </table>

                
            </div>

        </div>
    </div>
</div>









